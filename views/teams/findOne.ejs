<% var paths = [{ name: 'Teams', url: 'teams' }, { name: data.team.name, url: data.team.slug }]; %>
<% var partialData = { paths: paths }; %>

<%- partial('../partials/heading', { partialData: partialData}) %>

<form id="update" class="form-horizontal">
    <input id="_csrf" type="hidden" name="_csrf" value="<%= _csrf %>">

    <div class="form-group">
        <label for="id" class="col-sm-2 control-label">
            Id
        </label>
        <div class="col-sm-10">
            <input type="string" class="form-control" id="id" name="id" value="<%= data.team.id %>" disabled>
        </div>
    </div>

    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
            Name
        </label>
        <div class="col-sm-10">
            <input type="string" class="form-control" id="name" name="name" value="<%= data.team.name %>">
        </div>
    </div>

    <div class="form-group">
        <label for="slug" class="col-sm-2 control-label">
            Slug
        </label>
        <div class="col-sm-10">
            <input type="string" class="form-control" id="slug" name="slug" value="<%= data.team.slug %>">
        </div>
    </div>

    <div class="form-group">
        <label for="description" class="col-sm-2 control-label">
            Description
        </label>
        <div class="col-sm-10">
            <textarea class="form-control" rows="3" id="description" name="description"><%= data.team.description %></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">
                Update
            </button>
            <button id="delete" type="button" class="btn btn-danger">
                Delete
            </button>
        </div>
    </div>
</form>

<%- partial('../partials/footer') %>