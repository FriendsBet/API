<% var paths = [{ name: 'Teams', url: 'teams' }]; %>
<% var partialData = { paths: paths }; %>

<%- partial('../partials/heading', { partialData: partialData}) %>

<a href="/teams/new" class="btn btn-default">Create a team</a>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Slug</th>
        </tr>
    </thead>
    <tbody>
        <% if(data.teams.length) { %>
            <% _.each(data.teams, function (team) { %>
            <tr>
                <td>
                    <a href="/teams/<%= team.id %>">
                        <%= abbreviate(team.id) %>
                    </a>
                </td>
                <td><%= team.name %></td>
                <td><%= team.slug %></td>
            </tr>
            <% }); %>
        <% } else { %>
        <tr>
            <td colspan="3">No team for the moment</td>
        </tr>
        <% } %>
    </tbody>
</table>

<%- partial('../partials/footer') %>