<%
var paths = [
    { name: 'Bets', url: 'bets' },
    { name: data.bet.id, url: data.bet.id }
]; %>
<% var partialData = { paths: paths }; %>

<%- partial('../partials/heading', { partialData: partialData}) %>

<form id="update" class="form-horizontal">
    <input id="_csrf" name="_csrf" 
    type="hidden" value="<%= _csrf %>">

    <div class="form-group">
        <label for="id" class="col-sm-2 control-label">Id</label>
        <div class="col-sm-10">
            <input type="string" class="form-control" id="id" name="id" value="<%= data.bet.id %>" disabled>
        </div>
    </div>

    <div class="form-group">
        <label for="user" class="col-sm-2 control-label">
            User
        </label>
        <div class="col-sm-10">
            <select id="user" name="user" class="form-control">
                <% _.each(data.users, function (user) { %>
                <option value="<%= user.id %>"<% if(user.id === data.bet.user.id) { %> selected<% } %>>
                    <%= user.name() %>
                </option>
                <% }); %>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="match" class="col-sm-2 control-label">
            Match
        </label>
        <div class="col-sm-10">
            <select id="match" name="match" class="form-control">
                <% _.each(data.matches, function (match) { %>
                <option value="<%= match.id %>"<% if(match.id === data.bet.match.id) { %> selected<% } %>>
                    <%= match.name() %>
                </option>
                <% }); %>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label for="scoreTeamA" class="col-sm-2 control-label">
            Score team A
        </label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="scoreTeamA" name="scoreTeamA" value="<%= data.bet.scoreTeamA %>" min="0">
        </div>
    </div>

    <div class="form-group">
        <label for="scoreTeamB" class="col-sm-2 control-label">
            Score team B
        </label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="scoreTeamB" name="scoreTeamB" value="<%= data.bet.scoreTeamB %>" min="0">
        </div>
    </div>

    <div class="form-group">
        <label for="score" class="col-sm-2 control-label">
            Score
        </label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="score" name="score" value="<%= data.bet.score %>" min="0">
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <button id="delete" type="button" class="btn btn-danger">Delete</button>
        </div>
    </div>
</form>

<%- partial('../partials/footer') %>