<% var paths = [{ name: 'Bets', url: 'bets' }]; %>
<% var partialData = { paths: paths }; %>

<%- partial('../partial/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-2">
            <%- partial('../partial/menu', partialData) %>
        </div>
        <div class="col-sm-9 col-md-10">
            <%- partial('../partial/breadcrumb', partialData) %>

            <a href="/bets/new" class="btn btn-default">Create a bet</a>

            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>User</th>
                        <th>Match</th>
                        <th>Score Team A</th>
                        <th>Score Team B</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data.bets.length) { %>
                        <% _.each(data.bets, function (bet) { %>
                        <tr>
                            <td>
                                <a href="/bets/<%= bet.id %>">
                                    <%= abbreviate(bet.id) %>
                                </a>
                            </td>
                            <td>
                                <a href="/users/<%= bet.user.id %>">
                                    <%= bet.user.name() %>
                                </a>
                            </td>
                            <td>
                                <a href="/matches/<%= bet.match.id %>">
                                    <%= bet.match.name() %>
                                </a>
                            </td>
                            <td><%= bet.scoreTeamA %></td>
                            <td><%= bet.scoreTeamB %></td>
                            <td><%= bet.score %></td>
                        </tr>
                        <% }); %>
                    <% } else { %>
                    <tr>
                        <td colspan="6">No bet for the moment</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>