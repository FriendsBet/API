<% var paths = [{ name: 'Users', url: 'users' }, { name: 'Create', url: 'new' }]; %>
<% var partialData = { paths: paths }; %>

<%- partial('../partial/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-2">
            <%- partial('../partial/menu', partialData) %>
        </div>
        <div class="col-sm-9 col-md-10">
            <%- partial('../partial/breadcrumb', partialData) %>

            <form id="create" class="form-horizontal">
                <input id="_csrf" type="hidden" name="_csrf" value="<%= _csrf %>">

                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">
                        Email
                    </label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="firstName" class="col-sm-2 control-label">
                        First name
                    </label>
                    <div class="col-sm-10">
                        <input type="string" class="form-control" id="firstName" name="firstName" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="lastName" class="col-sm-2 control-label">
                        Last name
                    </label>
                    <div class="col-sm-10">
                        <input type="string" class="form-control" id="lastName" name="lastName" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="score" class="col-sm-2 control-label">
                        Score
                    </label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="score" name="score" min="0" value="0">
                    </div>
                </div>

                <div class="form-group">
                    <label for="description" class="col-sm-2 control-label">
                        Description
                    </label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="3" id="description" name="description"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            Create
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>