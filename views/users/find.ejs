<% var paths = [{ name: 'Users', url: 'users' }]; %>
<% var partialData = { paths: paths }; %>

<%- partial('../partials/heading', { partialData: partialData}) %>

<a href="/users/new" class="btn btn-default">Create a user</a>

<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>#</th>
            <th>Email</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        <% if(data.users.length) { %>
            <% _.each(data.users, function (user) { %>
            <tr>
                <td>
                    <a href="/users/<%= user.id %>">
                        <%= abbreviate(user.id) %>
                    </a>
                </td>
                <td><%= user.email %></td>
                <td><%= user.firstName %></td>
                <td><%= user.lastName %></td>
                <td><%= user.score %></td>
            </tr>
            <% }); %>
        <% } else { %>
        <tr>
            <td colspan="5">No user for the moment</td>
        </tr>
        <% } %>
    </tbody>
</table>

<%- partial('../partials/footer') %>