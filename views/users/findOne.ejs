<% var paths = [{ name: 'Users', url: 'users' }, { name: data.user.name(), url: data.user.id }]; %>
<% var partialData = { paths: paths }; %>

<%- partial('../partials/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-2">
            <%- partial('../partials/menu', partialData) %>
        </div>
        <div class="col-sm-9 col-md-10">
            <%- partial('../partials/breadcrumb', partialData) %>

            <form id="update" class="form-horizontal">
                <input id="_csrf" type="hidden" name="_csrf" value="<%= _csrf %>">

                <div class="form-group">
                    <label for="id" class="col-sm-2 control-label">
                        Id
                    </label>
                    <div class="col-sm-10">
                        <input type="string" class="form-control" id="id" name="id" value="<%= data.user.id %>" disabled>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="col-sm-2 control-label">
                        Email
                    </label>
                    <div class="col-sm-10">
                        <input type="email" class="form-control" id="email" name="email" value="<%= data.user.email %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="firstName" class="col-sm-2 control-label">
                        First name
                    </label>
                    <div class="col-sm-10">
                        <input type="string" class="form-control" id="firstName" name="firstName" value="<%= data.user.firstName %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="lastName" class="col-sm-2 control-label">
                        Last name
                    </label>
                    <div class="col-sm-10">
                        <input type="string" class="form-control" id="lastName" name="lastName" value="<%= data.user.lastName %>">
                    </div>
                </div>

                <div class="form-group">
                    <label for="score" class="col-sm-2 control-label">
                        Score
                    </label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="score" name="score" value="<%= data.user.score %>" min="0">
                    </div>
                </div>

                <div class="form-group">
                    <label for="description" class="col-sm-2 control-label">
                        Description
                    </label>
                    <div class="col-sm-10">
                        <textarea class="form-control" rows="3" id="description" name="description"><%= data.user.description %></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">
                            Update
                        </button>
                        <button id="delete" type="button" class="btn btn-danger">
                            Delete
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>