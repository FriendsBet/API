<% var paths = [{ name: 'Teams', url: 'teams' }]; %>
<% var partialData = { paths: paths }; %>

<%- partial('../partial/navbar') %>

<div class="container">
    <div class="row">
        <div class="col-sm-3 col-md-2">
            <%- partial('../partial/menu', partialData) %>
        </div>
        <div class="col-sm-9 col-md-10">
            <%- partial('../partial/breadcrumb', partialData) %>

            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Slug</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data.length) { %>
                        <% _.each(data, function (team) { %>
                        <tr>
                            <td><%= team.id %></td>
                            <td><%= team.name %></td>
                            <td><%= team.slug %></td>
                        </tr>
                        <% }); %>
                    <% } else { %>
                    <tr>
                        <td colspan="4">No team for the moment</td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>